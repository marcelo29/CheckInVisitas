<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.android.check.MenuGeral">

    <TextView
        android:id="@+id/txtSubTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/screen_border_txtview"
        android:gravity="center"
        android:text="@string/title_activity_menu_geral"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <RadioGroup
        android:id="@+id/rgMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rdCadVendedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/btnCadVendedor" />

        <RadioButton
            android:id="@+id/rdCadVisita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnCadVisita" />

        <RadioButton
            android:id="@+id/rdLstVisita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnLstVisita" />

        <RadioButton
            android:id="@+id/rdVoltar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnVoltar" />
    </RadioGroup>

    <Button
        android:id="@+id/btnConfirmar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/btnConfirmar" />

</LinearLayout><!-- From: file:/Users/masasp29/Google%20Drive/5Semestre/Android%20II/CheckVisita/app/src/main/res/layout/activity_menu_geral.xml -->